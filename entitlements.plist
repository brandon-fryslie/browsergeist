<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for screen recording -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Required for input monitoring -->
    <key>com.apple.security.device.input-monitoring</key>
    <true/>
    
    <!-- Required for creating virtual HID devices -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Required for hardened runtime -->
    <key>com.apple.security.get-task-allow</key>
    <false/>
    
    <!-- Disable library validation for development -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow execution of JIT-compiled code -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Required for IOKit access -->
    <key>com.apple.security.temporary-exception.iokit-user-client-class</key>
    <array>
        <string>IOHIDUserDevice</string>
        <string>IOGraphicsEngineUserClient</string>
    </array>
    
    <!-- Required for screen capture -->
    <key>com.apple.security.temporary-exception.shared-preference.read-write</key>
    <array>
        <string>com.apple.screencapture</string>
    </array>
    
    <!-- Network connections for IPC -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File system access for templates -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- Accessibility for debugging -->
    <key>com.apple.security.temporary-exception.apple-events</key>
    <array>
        <string>com.apple.systemevents</string>
    </array>
</dict>
</plist>
