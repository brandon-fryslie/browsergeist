#!/usr/bin/env python3
"""
BrowserGeist CLI Entry Point

Professional command-line interface for BrowserGeist automation framework.
"""

import sys
import os
from pathlib import Path

# Get project root
project_root = Path(__file__).parent.parent

# Check if we're in a virtual environment, if not activate it
if sys.prefix == sys.base_prefix:  # Not in virtual environment
    venv_python = project_root / ".venv" / "bin" / "python3"
    if venv_python.exists():
        # Re-execute with venv Python
        os.execv(str(venv_python), [str(venv_python)] + sys.argv)
    else:
        print("‚ùå Virtual environment not found. Please run: make setup")
        sys.exit(1)

# Add the src directory to Python path
sys.path.insert(0, str(project_root / "src"))

# Import and run the main CLI
from cli.main import main

if __name__ == "__main__":
    sys.exit(main())
